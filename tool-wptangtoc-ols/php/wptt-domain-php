echo "$lua_chon_website_ban_muon $thay_doi $phien_ban PHP:"
echo ""
lua_chon_NAME

if [[ "$NAME" = "0" || "$NAME" = "" ]]; then
  . /etc/wptt/wptt-php-ini-main 1
  exit
fi

pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" ]]; then
  clear
  . /etc/wptt/echo-color
