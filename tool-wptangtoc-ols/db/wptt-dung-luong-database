#!/bin/bash
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quan ly Database => Xem dung luong database                            |"
echo "========================================================================="
. /etc/wptt/.wptt.conf
. /etc/wptt/tenmien
echo ""
echo ""
echo "Lua chon website muon xem dung luong Database: "
echo ""
lua_chon_NAME
pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" || "$NAME" = "0" ]]; then
    clear
    . /etc/wptt/wptt-db-main
    exit
fi

. /etc/wptt/vhost/."$NAME".conf

path="/usr/local/lsws/$NAME/html"

pathcheckwp="/usr/local/lsws/$NAME/html/wp-load.php"
if [[ ! -f "$pathcheckwp" ]]; then
  clear
  echo "He thong xac nhan ban chua kich hoat su dung WordPress"
  echo "Tinh nang chi danh cho WordPress"
  sleep 3
    . /etc/wptt/wptt-db-main
  exit
fi

wp db size --tables --path=$path --allow-root
