#!/bin/bash
clear
. /etc/wptt/.wptt.conf
RED='\033[0;31m'
NC='\033[0m'
ols1=$(systemctl status lsws.service | grep 'Active' | cut -f2 -d':' | xargs | cut -f1 -d' ' | xargs)
mariadb1=$(systemctl status mariadb.service | grep 'Active' | cut -f2 -d':' | xargs | cut -f1 -d' ' | xargs)

if [[ "$ols1" = "loaded" ]]; then
    ols="Hoat dong tot"
else
    echo "========================================================================="
    ols2="Webserver LiteSpeed dang bi gap su co"
    echo "========================================================================="
fi

if [[ "$mariadb1" = "active" ]]; then
    mariadb="Hoat dong tot"
else
    echo "========================================================================="
    mariadb2="MariaDB Database dang bi gap su co"
    echo "========================================================================="
fi

echo -e "${RED}+------------------------------------------------------------------------+"
echo "|                        WPTANGTOC OLS phien ban: $version_wptangtoc_ols		 |"
echo "|                          Phat trien boi: Gia Tuan			 |"
echo -e "+------------------------------------------------------------------------+ ${NC}"
echo "========================================================================="
if [[ "$ols1" = "active" && "$mariadb1" = "active" ]]; then
    hoatdong="hoat dong tot"
else
    hoatdong="may chu dang co van de, can phai khac phuc"
    echo "$mariadb2"
    echo "$ols2"
fi
echo "Tinh trang may chu: $hoatdong"
echo "-------------------------------------------------------------------------"
echo "Huong dan: https://wptangtoc.com/wptangtoc-ols-huong-dan/"
echo "-------------------------------------------------------------------------"
echo ""
echo ""
echo "Sao luu && Khoi Phuc:"
echo ""
options=(
    "Sao luu website"                                          #1
    "Khoi phuc website"                                        #2
    "Sao luu database"                                         #3
    "Khoi phuc database"                                       #4
    "Tu dong sao luu website"                                  #5
    "Tat tu dong sao luu website"                              #6
    "Xoa file backup"                                          #7
    "Thiet lap backup google driver Rclone"                    #8
    "Tai File backup tu google driver"                         #9
    "Huy dang ky google driver"                                #10
    "Sao luu tat ca website"                                   #11
    "Sao luu tat ca website va uploads luon len Google Driver" #12
    "Thiet lap tu dong xoa File backup het han"                #13
    "Tat tu dong xoa file backup het han"                      #14
)
PS3="
Nhap lua chon cua ban (1-${#options[@]}) [0=Thoat]: "
select opt in "${options[@]}"; do
    case $opt in

    "${options[0]}")
        "/etc/wptt/backup-restore/wptt-saoluu"
        ;;
    "${options[1]}")
        "/etc/wptt/backup-restore/wptt-khoiphuc"
        ;;
    "${options[2]}")
        "/etc/wptt/db/wptt-saoluu-database"
        ;;
    "${options[3]}")
        "/etc/wptt/db/wptt-nhapdatabase"
        ;;
    "${options[4]}")
        "/etc/wptt/backup-restore/wptt-auto-backup"
        ;;
    "${options[5]}")
        "/etc/wptt/backup-restore/wptt-tat-auto-backup"
        ;;
    "${options[6]}")
        "/etc/wptt/backup-restore/wptt-xoa-file-backup"
        ;;
    "${options[7]}")
        "/etc/wptt/backup-restore/wptt-rclone"
        ;;
    "${options[8]}")
        "/etc/wptt/backup-restore/wptt-download-rclone"
        ;;

    "${options[9]}")
        "/etc/wptt/backup-restore/wptt-huy-rclone"
        ;;

    "${options[10]}")
        "/etc/wptt/backup-restore/wptt-backup-all"
        ;;

    "${options[11]}")
        "/etc/wptt/backup-restore/wptt-backup-all-put-google-driver"
        ;;
    "${options[12]}")
        "/etc/wptt/backup-restore/wptt-auto-delete-backup"
        ;;

    "${options[13]}")
        "/etc/wptt/backup-restore/wptt-tat-delete-backup"
        ;;

    *) wptangtoc ;;
    esac
done
