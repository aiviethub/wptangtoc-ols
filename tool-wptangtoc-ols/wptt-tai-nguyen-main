#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2022
if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi
echo ""
echo ""
echo "Quản lý tài nguyên server:"
echo ""
options=(
    "Kiểm tra ổ cứng"                     #1
    "Kiểm tra công nghệ ảo hóa VPS"                      #2
    "kiểm tra CPU"                  #3
    "Kiểm tra RAM"                #4
    "Kiểm tra tốc độ mạng internet"                #5
)
PS3="
Nhập lựa chọn của bạn (1-${#options[@]}) [0=Thoát]: "
select opt in "${options[@]}"; do
    case $opt in

    "${options[0]}")
        "/etc/wptt/tai-nguyen-server/wptt-kiem-tra-disk" 98
        ;;
    "${options[1]}")
        "/etc/wptt/tai-nguyen-server/wptt-xoa-database" 98
        ;;
    "${options[2]}")
        "/etc/wptt/tai-nguyen-server/wptt-saoluu-database" 98
        ;;
    "${options[3]}")
        "/etc/wptt/tai-nguyen-server/wptt-nhapdatabase" 98
        ;;
    "${options[4]}")
        "/etc/wptt/tai-nguyen-server/wptt-thongtin-db" 98
        ;;

    "${options[5]}")
        "/etc/wptt/wordpress/all-database" 98
        ;;

    "${options[6]}")
        "/etc/wptt/wordpress/all-database-sua-chua" 98
        ;;

    *) wptangtoc 1 ;;
    esac
done
