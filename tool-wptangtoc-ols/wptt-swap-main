#!/bin/bash
. /etc/wptt/wptt-header-menu
header_menu
echo ""
echo ""
uswap=$(free -m | awk '/Swap/ {print $3}')
echo "Dung luong swap hien tai $uswap"
echo ""
echo "Quan ly logs:"
echo ""

options=(
    "Them swap"                       #1
    "Xoa swap"                     #2
)

PS3="
Nhap lua chon cua ban (1-${#options[@]}) [0=Thoat]: "
select opt in "${options[@]}"; do
    case $opt in
    "${options[0]}")
        "/etc/wptt/swap/wptt-tao-swap"
        ;;
    "${options[1]}")
        "/etc/wptt/swap/wptt-tao-swap"
        ;;
    *) wptangtoc ;;
    esac
done
