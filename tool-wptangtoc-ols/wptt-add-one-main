if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi

. /etc/wptt/.wptt.conf
if [[ $ngon_ngu = '' ]];then
	ngon_ngu='vi'
fi
. /etc/wptt/lang/$ngon_ngu.sh

echo ""
echo ""
echo "Add One:"
echo ""
options=(
    "Active Key"            #1
    "Bật/tắt kiểm tra uptime website API"            #1
)
PS3="
$(tput setab 0)$nhap_lua_chon_cua_ban (1-${#options[@]}) [0=$exit_thoat]:$(tput sgr0) "
select opt in "${options[@]}"; do
    case $opt in
    "${options[0]}")
        "/etc/wptt/add-one/activate-key" 98
        ;;

    "${options[1]}")
        "/etc/wptt/add-one/thiet-lap-downtimes" 98
        ;;
    *) wptangtoc 1 ;;
    esac
done

