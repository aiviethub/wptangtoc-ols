#!/bin/bash
. /etc/wptt/wptt-header-menu
header_menu
echo ""
echo ""
echo "Quản lý webguiadmin:"
echo ""
options=(
    "Kích hoạt"                       #1
    "Hủy kích hoạt"                     #2
    "Đổi cổng port"            #3
    "Thay đổi ID va Password"              #4
    "Xem lại thông tin tài khoản" #5
)
PS3="
Nhập lựa chọn của bạn (1-${#options[@]}) [0=Thoát]: "
select opt in "${options[@]}"; do
    case $opt in

    "${options[0]}")
        "/etc/wptt/webadmin/wptt-mo-webgui"
        ;;
    "${options[1]}")
        "/etc/wptt/webadmin/wptt-dong-webgui"
        ;;
    "${options[2]}")
        "/etc/wptt/webadmin/wptt-doi-port-webadmin"
        ;;

    "${options[3]}")
        "/etc/wptt/webadmin/wptt-thay-doi-password-user"
        ;;

    "${options[4]}")
        "/etc/wptt/webadmin/wptt-check-tk-webguiadmin"
        ;;
    *) wptangtoc 1 ;;
    esac
done
