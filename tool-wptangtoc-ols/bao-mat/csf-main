#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2022
if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi
echo ""
echo ""
echo "Quản lý CSF:"
echo ""
options=(
    "Cài đặt CSF" #0
	"Hủy thiết lập CSF" #1
	"chặn IP" #2
	"Mở Khóa IP" #3
	"Mở Khóa tất cả IP" #4
	"Chặn quốc gia" #5
	"Chỉ cho phép một số quốc gia được truy cập" #5
)

PS3="
Nhập lựa chọn của bạn (1-${#options[@]}) [0=Thoát]: "
select opt in "${options[@]}"; do
	case $opt in
		"${options[0]}")
			"/etc/wptt/bao-mat/csf/wptt-cai-dat-csf" 98
			;;

		"${options[1]}")
			"/etc/wptt/bao-mat/csf/wptt-huy-cai-dat-csf" 98
			;;

		"${options[2]}")
			"/etc/wptt/bao-mat/csf/block-ip" 98
			;;


		"${options[3]}")
			"/etc/wptt/bao-mat/csf/go-block-ip" 98
			;;


		"${options[4]}")
			"/etc/wptt/bao-mat/csf/go-block-all-ip" 98
			;;


		"${options[5]}")
			"/etc/wptt/bao-mat/csf/chan-ip-quoc-gia" 98
			;;

		"${options[6]}")
			"/etc/wptt/bao-mat/csf/chan-ip-quoc-gia-chi-cho-phep" 98
			;;

		*) wptangtoc 1 ;;
	esac
done
