#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2022
if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi
echo ""
echo ""
echo "Quản lý CSF:"
echo ""
options=(
    "Cài đặt CSF"
	"Hủy thiết lập CSF"
	"chặn IP"
	"Mở Khóa IP"
	"Mở Port"
	"Đóng Port"
)

PS3="
Nhập lựa chọn của bạn (1-${#options[@]}) [0=Thoát]: "
select opt in "${options[@]}"; do
    case $opt in
    "${options[0]}")
        "/etc/wptt/bao-mat/csf/wptt-cai-dat-csf" 98
        ;;

    "${options[1]}")
        "/etc/wptt/bao-mat/csf/wptt-huy-cai-dat-csf" 98
        ;;

    "${options[2]}")
        "/etc/wptt/bao-mat/csf/wptt-modsecurity" 98
        ;;

	*) wptangtoc 1 ;;
    esac
done
