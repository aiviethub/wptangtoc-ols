#!/bin/bash
. /etc/wptt/.wptt.conf
echo "/-----------------------------------------------------------------------/"
echo "Bảo mật => Hủy tính năng chống ddos website"
echo "/-----------------------------------------------------------------------/"

if [ "$(ls -A /etc/wptt/vhost)" ]; then
    echo "========================================================================="
    echo "Danh sách Domain đã kích hoạt chống ddos:"
    echo "========================================================================="
    for entry in $(ls -A /etc/wptt/vhost); do
        domain=$(echo $entry | sed 's/^.//' | sed 's/.conf//')
        domain2=${domain//[-._]/wp}
        path="/etc/fail2ban/filter.d/ddos-$domain2.conf"
        i=1
        if [[ -f "$path" ]]; then
            checkauto="Đã kích hoạt"
        else
            checkauto="Chưa kích hoạt"
        fi
        echo "Website $domain $checkauto chống ddos"
    done
    echo "========================================================================="
    echo
fi

echo ""
echo ""
echo "Lựa chọn website bạn muốn hủy kích hoạt ddos website: "
echo ""
function lua_chon_NAME() {
    NAME=""
    if [ "$(ls -At /etc/wptt/vhost)" ]; then
        selects=()
        for entry in $(ls -A /etc/wptt/vhost); do
            NAME=$(echo $entry | sed 's/^.//' | sed 's/.conf//')
            NAME2=${NAME//[-._]/wp}
            if [[ -f /etc/fail2ban/filter.d/ddos-$NAME2.conf ]]; then
                selects+=("$NAME")
            fi
        done
if [[ $selects = '' ]];then
echo "Tất cả domain trên hệ thống chưa có domain nào được kích hoạt chống DDOS"
. /etc/wptt/wptt-bao-mat-main 1
fi

        PS3="
-//- Nhập lựa chọn website của bạn [0=Thoát]: "
        select select in ${selects[@]}; do
            NAME=$select
            index=$REPLY
            break
        done
    else
        clear
        echo "Khong co domain tren he thong cua ban."
        exit
    fi
}

lua_chon_NAME

if [[ $NAME = '' || $NAME = 0 ]];then
. /etc/wptt/wptt-bao-mat-main 1
fi


NAME2=${NAME//[-._]/wp}
if [[ ! -f /etc/fail2ban/filter.d/ddos-$NAME2.conf ]]; then
    echo "Ban chua co domain nao duoc kich hoat chong Brute Force wp-admin"
    exit
fi

tuancheck=$(cat /usr/local/lsws/conf/vhosts/"$NAME"/"$NAME".conf | grep -c "#vi-bao-mat-ddos")
if [[ "$tuancheck" = "1" ]]; then
    sed -i "/#vi-bao-mat-ddos/,+12d" /usr/local/lsws/conf/vhosts/"$NAME"/"$NAME".conf
    rm -rf /usr/local/lsws/$NAME/logs
    /usr/local/lsws/bin/lswsctrl restart >/dev/null 2>&1
fi
rm -f /etc/fail2ban/filter.d/ddos-$NAME2.conf
sed -i "/ddos-$NAME2/,+7d" /etc/fail2ban/jail.local
fail2ban-client reload
systemctl restart fail2ban
echo "Hoan tat huy kich hoat chong ddos cho website $NAME"

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-bao-mat-main 1
fi

