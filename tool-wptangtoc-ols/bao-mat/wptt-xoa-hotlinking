#!/bin/bash

function huong_dan(){
Tính năng này để tắt Hotlinking, khi đã thiết lập trước đó

Hotlinking [còn được gọi là "inline linking", "direct linking" hoặc "bandwidth theft" - trộm băng thông] là hành động hiển thị một hình ảnh, video, hoặc các tập tin đa phương tiện khác trên một trang web bằng cách trỏ trực tiếp đến tập tin đó trên máy chủ của một trang web khác, thay vì lưu trữ bản sao của tập tin đó trên máy chủ của trang web hiển thị.

Nói một cách đơn giản, khi bạn thấy một hình ảnh trên trang web A, nhưng hình ảnh đó thực chất được tải từ máy chủ của trang web B, thì trang web A đang thực hiện hotlinking từ trang web B.
}

echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Bao Mật => Huy Kích hoạt Hotlinking	                                  |"
echo "========================================================================="
echo ""

. /etc/wptt/tenmien
echo ""
echo ""
echo "Lựa chọn website bạn muốn huỷ kích hoạt Hotlinking: "
echo ""
lua_chon_NAME

if [[ $NAME = '' || $NAME = '0' ]];then
. /etc/wptt/wptt-bao-mat-main 1
fi

giatuandz=$(cat /usr/local/lsws/$NAME/html/.htaccess | grep -c "#begin-hotlink-wptangtoc-ols")

if [[ "$giatuandz" = "0" ]]; then
echo "Bạn chưa kích hoạt hotlinking trước đó rồi"
. /etc/wptt/wptt-bao-mat-main 1
exit
fi

. /etc/wptt/echo-color
path="/usr/local/lsws/$NAME/html/.htaccess"
if [[ -f "$path" ]]; then
	_runing "Huỷ kích hoạt hotlinking website $NAME"
echo "Huỷ kích hoạt hotlinking website $NAME: $(date '+%d-%m-%Y %H:%M')" >> /var/log/wptangtoc-ols.log
sed -i -e '/^#begin-hotlink-wptangtoc-ols/,/^#end-hotlink-wptangtoc-ols$/d' /usr/local/lsws/$NAME/html/.htaccess
/usr/local/lsws/bin/lswsctrl restart >/dev/null 2>&1
	_rundone "Huỷ kích hoạt hotlinking website $NAME"
else
	_runloi "Huỷ kích hoạt hotlinking website $NAME"
fi


check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-bao-mat-main 1
fi


