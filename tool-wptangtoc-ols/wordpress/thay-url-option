#!/bin/bash
. /etc/wptt/.wptt.conf
if [[ $ngon_ngu = '' ]];then
	ngon_ngu='vi'
fi
. /etc/wptt/lang/$ngon_ngu.sh

echo ""
echo ""
echo ""
echo "========================================================================="
echo "|$quan_ly_wordpress => $cap_nhat Url home && siteurl            |"
echo "========================================================================="

. /etc/wptt/tenmien-only-website-by-wordpress
echo ""
echo ""
echo "$lua_chon_website_ban_muon $cap_nhat home && siteurl: "
echo ""
lua_chon_NAME


. /etc/wptt/echo-color
if [[ "$NAME" = "0" || "$NAME" = "" ]]; then
    . /etc/wptt/wptt-wordpress-main 1
fi

pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" ]]; then
    clear
	echoDo "$ten_mien_nay_khong_ton_tai_tren_he_thong"
    sleep 3
    . /etc/wptt/wptt-wordpress-main 1
    exit
fi

pathcheckwp="/usr/local/lsws/$NAME/html/wp-load.php"
if [[ ! -f "$pathcheckwp" ]]; then
  clear
  echoDo "$he_thong_xac_nhan_ban_khong_su_ma_nguon"
  echoDo "$tinh_nang_nay_chi_danh_cho_ma_nguon_wordpress"
  sleep 3
  . /etc/wptt/wptt-wordpress-main 1
  exit
fi

. /etc/wptt/php/wptt-php-service-cli-theo-domain $NAME


if [[ -f /usr/local/lsws/$NAME/html/wp-config.php ]]; then
	echo "Update home - siteurl Wordpress website $NAME : $(date '+%d-%m-%Y %H:%M')" >> /var/log/wptangtoc-ols.log


	#update sử dụng www
	if [[ -f /usr/local/lsws/$NAME/html/wp-config.php ]]; then
		giatuanwww=$(wp option get home --path=/usr/local/lsws/$NAME/html --allow-root 2>/dev/null | grep 'www.')
		if [[ $giatuanwww ]]; then
			if [[ -f "/etc/letsencrypt/live/$NAME/cert.pem" || -d /usr/local/lsws/$NAME/ssl || $(curl https://$NAME | grep 'cf-') ]]; then
				wp option update home "https://www.$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1
				wp option update siteurl "https://www.$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1
			else
				wp option update home "http://www.$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1
				wp option update siteurl "http://www.$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1
			fi
			check_menu_wptangtoc_active=$1
			if [[ $check_menu_wptangtoc_active = "98" ]];then
				. /etc/wptt/wptt-wordpress-main 1
			fi

		fi
	fi

	#$(curl https://$NAME | grep 'cf-') là check có dùng cloudflare không
	if [[ -f "/etc/letsencrypt/live/$NAME/cert.pem" || -d /usr/local/lsws/$NAME/ssl || $(curl https://$NAME | grep 'cf-') ]]; then
_runing "$cap_nhat Home URL website $NAME: https://$NAME"
        wp option update home "https://$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1
        wp option update siteurl "https://$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1
_rundone "$cap_nhat Home URL website $NAME: https://$NAME"
    else
_runing "$cap_nhat Home URL website $NAME: http://$NAME"
        wp option update home "http://$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1
        wp option update siteurl "http://$NAME" --path=/usr/local/lsws/$NAME/html --allow-root >/dev/null 2>&1
_rundone "$cap_nhat Home URL website $NAME: http://$NAME"
    fi

else
  echoDo "$he_thong_xac_nhan_ban_khong_su_ma_nguon"
fi
check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-wordpress-main 1
fi
