#!/bin/bash
#
#
# @author: Gia Tuáº¥n
# @website: https://wptangtoc.com
# @since: 2021
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quan ly WordPress => Xoa cache                                         |"
echo "========================================================================="

NAME=$1
if [[ "$NAME" = "" ]]; then
. /etc/wptt/tenmien
echo ""
echo ""
echo "lua chon website ban muon xoa toan bo cache: "
echo ""
lua_chon_NAME
fi
pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" || "$NAME" = "0" ]]; then
    clear
    . /etc/wptt/wptt-menu-wordpress
return 2>/dev/null ; exit
fi

pathcheckwp="/usr/local/lsws/$NAME/html/wp-load.php"
if [[ ! -f "$pathcheckwp" ]]; then
  clear
  echo "He thong xac nhan ban chua kich hoat su dung WordPress"
  sleep 3
  . /etc/wptt/wptt-menu-wordpress
return 2>/dev/null ; exit
fi


path2="/usr/local/lsws/$NAME/html"
cd /usr/local/lsws/$NAME/html
wp cache flush --path=$path2 --allow-root
pathcheckplugin="/usr/local/lsws/$NAME/html/wp-content/plugins/litespeed-cache"
if [[ -d "$pathcheckplugin" ]]; then
    wp litespeed-purge all --path=$path2 --allow-root
fi

echo "Hoan tat qua trinh clear cache website $NAME"
