#!/bin/bash
. /etc/wptt/wptt-header-menu
header_menu
echo ""
echo ""
echo "Quan ly Update:"
echo ""
options=(
    "Cap nhat WPTangToc OLS"                   #1
    "Cap nhat Toan bo Webserver"               #2
    "Cap nhat PHP"                             #3
    "Cap nhat maria database"                  #4
    "Cap nhat OpenLiteSpeed Webserver"         #5
    "Cai lai OpenLiteSpeed Webserver"          #6
    "Cap nhat Rclone Gooogle Driver"           #7
    "Cap nhat WP CLI"                          #8
    "Kich hoat tu dong cap nhat WPTangToc OLS" #9
    "Tat tu dong cap nhat WPTangToc OLS"       #10
    "Kiem tra phien ban"                       #11
	"Cai Dat WPTangToc version chinh thuc"     #12
	"Cai Dat WPTangToc version Beta"           #13
)

PS3="
Nhap lua chon cua ban (1-${#options[@]}) [0=Thoat]: "
select opt in "${options[@]}"; do
    case $opt in

    "${options[0]}")
        "/etc/wptt/wptt-update"
        ;;
    "${options[1]}")
        "/etc/wptt/update/wptt-update-he-thong"
        ;;
    "${options[2]}")
        "/etc/wptt/update/wptt-update-php"
        ;;

    "${options[3]}")
        "/etc/wptt/update/wptt-update-maria-db"
        ;;

    "${options[4]}")
        "/etc/wptt/update/wptt-update-litespeed"
        ;;

    "${options[5]}")
        "/etc/wptt/wptt-cai-lai"
        ;;
    "${options[6]}")
        "/etc/wptt/update/wptt-update-rclone"
        ;;

    "${options[7]}")
        "/etc/wptt/update/wptt-wp-cli"
        ;;

    "${options[8]}")
        "/etc/wptt/update/wptt-auto-update"
        ;;

    "${options[9]}")
        "/etc/wptt/update/wptt-tat-auto-update"
        ;;

    "${options[10]}")
        "/etc/wptt/update/wptt-kiem-tra-version"
        ;;

    "${options[11]}")
        "/etc/wptt/update/wptt-update2 chinhthuc"
        ;;

    "${options[12]}")
        "/etc/wptt/update/wptt-update2 beta"
        ;;

    *) wptangtoc ;;
    esac
done
