#!/bin/bash
if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi
echo ""
echo ""
echo "Quản lý SSL:"
echo ""
options=(
    "Kích hoạt quản lý files"          #1
    "Hủy kích hoạt quản lý Files"    #2
    "Thay đổi tài khoản / PassWord"              #3
)

PS3="
Nhap lua chon cua ban (1-${#options[@]}) [0=Thoat]: "
select opt in "${options[@]}"; do
    case $opt in
    "${options[0]}")
        "/etc/wptt/ssl/wptt-caissl" 98
        ;;

    "${options[1]}")
        "/etc/wptt/ssl/wptt-mo-rong-ssl-free" 98
        ;;

    "${options[2]}")
        "/etc/wptt/ssl/wptt-xoa-ssl" 98
        ;;

    "${options[3]}")
        "/etc/wptt/ssl/cloudflare-api-dns-main" 98
        ;;
    *) wptangtoc 1 ;;
    esac
done
