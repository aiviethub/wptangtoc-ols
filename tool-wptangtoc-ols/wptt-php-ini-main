#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2025
if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi

. /etc/wptt/.wptt.conf
if [[ $ngon_ngu = '' ]];then
	ngon_ngu='vi'
fi
. /etc/wptt/lang/$ngon_ngu.sh

echo ""
echo ""
echo "$quan_ly_php:"
echo ""
options=(
  "$cau_hinh_php_ini"               #3
  "$cau_hinh_uploads_max_php"   #1
  "$cau_hinh_max_input_time_php" #12
  "$thay_doi_version_phien_ban_php_domain"              #4
  "$thay_doi_version_phien_ban_php_webserver" #5
  "$kiem_tra_phien_ban_php"         #6
  "$cai_them_php_extension"         #7
  "$xoa_php_extension"        	 #8
  "$cau_hinh_max_excution_time" #10
  "$cau_hinh_memory_litmit" #11
  "$khoi_phuc_php_cau_hinh"  #2
)
# Hàm thực thi hành động dựa trên index (cho menu Quản lý PHP)
run_action() {
    local index=$1
    local script_path=""
    local script_args="98" # Tham số 98 cho các script này

    case $index in
         0) script_path="/etc/wptt/php/wptt-sua-phpini" ;;
         1) script_path="/etc/wptt/php/wptt-php-ini-uploads" ;;
         2) script_path="/etc/wptt/php/wptt-php-max-input-time" ;;
         3) script_path="/etc/wptt/php/wptt-domain-php" ;;                 # Thay đổi version PHP domain?
         4) script_path="/etc/wptt/php/wptt-php-version-all-server" ;;    # Thay đổi version PHP webserver?
         5) script_path="/etc/wptt/php/wptt-php-version-domain" ;;        # Kiểm tra version PHP? Tên file giống index 3?
         6) script_path="/etc/wptt/php/php-extension-them" ;;
         7) script_path="/etc/wptt/php/php-extension-xoa" ;;
         8) script_path="/etc/wptt/php/wptt-php-max-execution-time" ;;
         9) script_path="/etc/wptt/php/wptt-php-memory-limit-ram-php" ;;
        10) script_path="/etc/wptt/php/wptt-khoi-phuc-sua-phpini" ;;
        *) echo "${lua_chon_khong_hop_le:-Lựa chọn không hợp lệ}: Index $index."; return 1 ;;
    esac

    # Kiểm tra và chạy script con
    if [[ -x "$script_path" ]]; then
        "$script_path" "$script_args"
    else
        echo "Lỗi: Không tìm thấy hoặc không thể thực thi script '$script_path'."
    fi
    # read -rp "Nhấn Enter để quay lại menu..." # Bỏ comment nếu muốn tạm dừng
}
. /etc/wptt/wptt-callback-menu-chon

