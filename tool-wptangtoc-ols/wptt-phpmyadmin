#!/bin/bash
. /etc/wptt/wptt-header-menu
header_menu
echo ""
echo ""
echo "Quan ly phpmyadmin:"
echo ""
options=(
    "Kich hoat phpmyadmin"                       #1
    "Huy kich hoat phpmyadmin"                     #2
    "Doi cong port phpmyadmin"            #3
    "Thay doi ID va Password"              #4
    "Xem lai thong tin tai khoan truy cap" #5
)
PS3="
Nhap lua chon cua ban (1-${#options[@]}) [0=Thoat]: "
select opt in "${options[@]}"; do
    case $opt in

    "${options[0]}")
        "/etc/wptt/phpmyadmin/wptt-mo-phpmyadmin"
        ;;
    "${options[1]}")
        "/etc/wptt/phpmyadmin/wptt-dong-webgui"
        ;;
    "${options[2]}")
        "/etc/wptt/phpmyadmin/wptt-doi-port-phpmyadmin"
        ;;

    "${options[3]}")
        "/etc/wptt/phpmyadmin/wptt-thay-doi-password-user"
        ;;

    "${options[4]}")
        "/etc/wptt/phpmyadmin/wptt-check-tk-phpmyadmin"
        ;;
    *) wptangtoc ;;
    esac
done
