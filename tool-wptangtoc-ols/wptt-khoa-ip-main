#!/bin/bash
. /etc/wptt/wptt-header-menu
header_menu
echo ""
echo ""
echo "Quản lý Mở/khóa IP:"
echo ""
options=(
    "Khóa IP truy cập SSH"                               #1
    "Mở Khóa IP truy cập SSH"                            #2
    "Danh sách IP đã bị khóa vì cố gắng truy cập SSH"                  #3
    "Thay đổi lần nhập sai SSH bị tạm khóa SSH"          #4
    "Thay đổi thời gian bị tạm khóa IP SSH"              #5
    "Khóa IP truy cập website"                           #6
    "Mở khóa IP truy cập website"                        #7
    "Danh sách IP đã bị khóa truy cập website"           #8
    "Mở khóa toán bộ IP đã bị khóa truy cập vào website" #9
    "Danh sách IP bị khóa vì Brute Force"                #10
    "Mở khóa IP bị khóa vì Brute Force"                  #11
)
PS3="
Nhap lua chon cua ban (1-${#options[@]}) [0=Thoat]: "
select opt in "${options[@]}"; do
    case $opt in

    "${options[0]}")
        "/etc/wptt/fail2ban/wptt-khoa-ip"
        ;;
    "${options[1]}")
        "/etc/wptt/fail2ban/wptt-mokhoaip"
        ;;

    "${options[2]}")
        "/etc/wptt/fail2ban/wptt-list"
        ;;

    "${options[3]}")
        "/etc/wptt/fail2ban/wptt-changer-login-sai"
        ;;

    "${options[4]}")
        "/etc/wptt/fail2ban/wptt-changer-times-block"
        ;;

    "${options[5]}")
        "/etc/wptt/bao-mat/wptt-khoa-ip"
        ;;

    "${options[6]}")
        "/etc/wptt/bao-mat/wptt-mo-khoa-ip"
        ;;

    "${options[7]}")
        "/etc/wptt/bao-mat/danh-sach-ip-da-chan"
        ;;

    "${options[8]}")
        "/etc/wptt/bao-mat/wptt-mo-khoa-toan-bo"
        ;;

    "${options[9]}")
        "/etc/wptt/bao-mat/wptt-admin-danh-sach-block"
        ;;

    "${options[10]}")
        "/etc/wptt/bao-mat/wptt-admin-mo-khoa"
        ;;
    *) wptangtoc ;;
    esac
done
