#!/bin/bash
. /etc/wptt/wptt-header-menu
header_menu
echo ""
echo ""
echo "Quan ly phpmyadmin:"
echo ""
options=(
    "Kich hoat phpmyadmin"                       #1
    "Huy kich hoat phpmyadmin"                     #2
    "Xem thong tin dang nhap phpmyadmin"            #3
    "Thay doi ID va Password dang nhap"              #4
)
PS3="
Nhap lua chon cua ban (1-${#options[@]}) [0=Thoat]: "
select opt in "${options[@]}"; do
    case $opt in

    "${options[0]}")
        "/etc/wptt/phpmyadmin/wptt-mo-phpmyadmin"
        ;;
    "${options[1]}")
        "/etc/wptt/phpmyadmin/wptt-xoa-phpmyadmin"
        ;;
    "${options[2]}")
        "/etc/wptt/phpmyadmin/wptt-thongtin-phpmyadmin"
        ;;

    "${options[3]}")
        "/etc/wptt/phpmyadmin/wptt-phpmyadmin-doi-password"
        ;;

    *) wptangtoc ;;
    esac
done
