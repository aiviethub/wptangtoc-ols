#!/bin/bash
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quản lý mã nguồn => Truy cập nhanh mã nguồn website                    |"
echo "========================================================================="
. /etc/wptt/tenmien
echo ""
echo ""
echo "Truy cap nhanh vao thu muc ma nguon: "
echo ""
lua_chon_NAME
name="$NAME"


. /etc/wptt/echo-color

if [[ "$NAME" = "0" || "$NAME" = "" ]]; then
    . /etc/wptt/wptt-ma-nguon-main 1
fi

pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" ]]; then
    clear
	echoDo "Tên miền không tồn tại trên hệ thống này"
    sleep 3
	    . /etc/wptt/wptt-ma-nguon-main 1
    exit
fi

box_out()
{
    title="| $1 |"
    edge=$(echo "$title" | sed 's/./=/g')
    echo "$edge"
    echo "$title"
    echo "$edge"
}

echo "Truy cap nhanh vao thu muc ma nguon cua website $name"
echo ""
box_out "Truy cap vao: cd /usr/local/lsws/$name/html"
echo ""
echo ""
ls /usr/local/lsws/$name/html --color=auto
cd /usr/local/lsws/$name/html
exec bash >/dev/null 2>&1
