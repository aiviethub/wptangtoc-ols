#!/bin/bash
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quan ly Ma nguon => Xem nhanh ma nguon website                         |"
echo "========================================================================="
. /etc/wptt/tenmien
echo ""
echo ""
echo "Truy cap nhanh vao thu muc ma nguon: "
echo ""
lua_chon_NAME
name="$NAME"
pathttt="/etc/wptt/vhost/.$name.conf"
if [[ ! -f "$pathttt" || "$name" = "0" ]]; then
    clear
    echo "Domain khong ton tai tren VPS."
    . /etc/wptt/wptt-ma-nguon-main
    exit
fi

box_out()
{
    title="| $1 |"
    edge=$(echo "$title" | sed 's/./=/g')
    echo "$edge"
    echo "$title"
    echo "$edge"
}

cd /wptangtoc-ols/"$name"/html || exit
echo "Truy cap nhanh vao thu muc ma nguon cua website $name"
echo ""
box_out "cd /wptangtoc-ols/$name/html"
echo ""
echo ""
ls /wptangtoc-ols/"$name"/html --color=auto
