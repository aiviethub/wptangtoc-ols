#!/bin/bash
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quản lý mã nguồn => shortcut alias domain                              |"
echo "========================================================================="
echo ""
echo ""
. /etc/wptt/.wptt.conf
cd
. /etc/wptt/tenmien
echo "Lựa chọn Doamin muốn đặt tên shortcut alias: "
echo ""
lua_chon_NAME

name="$NAME"

if [[ "$NAME" = "0" || "$NAME" = "" ]]; then
    . /etc/wptt/wptt-ma-nguon-main 1
fi

pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" ]]; then
    clear
	echoDo "Tên miền không tồn tại trên hệ thống này"
    sleep 3
    . /etc/wptt/wptt-ma-nguon-main 1
    exit
fi


if [[ -d /root/$name ]]; then
    echo "Ten dinh danh da ton tai"
    read -p "Ban co muon xoa shortcuts truoc do? (y/n) " dongy
    if [[ "$dongy" = "y" ]]; then
        rm -rf /root/"$name"
        echo "Da xoa shortcuts truoc do"
    fi

fi
path="/usr/local/lsws/$name/html"
ln -s "$path" "$name"

echo
echo "-------------------------------------------------------------------------"
echo "Da tao shortcuts Alias den thu muc ma nguon cua $path"
echo "Su dung lenh sau: cd $name"
echo "-------------------------------------------------------------------------"
echo
echo "Thiết lập thành công"
