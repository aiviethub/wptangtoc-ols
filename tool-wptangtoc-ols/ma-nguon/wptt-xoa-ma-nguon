#!/bin/bash
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quản lý Mã nguồn => Xóa mã nguồn website                               |"
echo "========================================================================="
. /etc/wptt/tenmien
echo ""
echo ""
echo "Lựa chọn website bạn muốn xóa mã nguồn: "
echo ""
lua_chon_NAME
name="$NAME"

. /etc/wptt/echo-color
if [[ "$NAME" = "0" || "$NAME" = "" ]]; then
    . /etc/wptt/wptt-wordpress-main 1
fi

pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" ]]; then
    clear
	echoDo "Tên miền không tồn tại trên hệ thống này"
    sleep 3
    . /etc/wptt/wptt-wordpress-main 1
    exit
fi

read -p "Xác nhận bạn muốn xóa mã nguồn website $NAME" dongy
if [[ "$dongy" = "y" ]]; then
	_runing "Xóa mã nguồn website $NAME"
    rm -rf /usr/local/lsws/"$NAME"/html/*
	_rundone "Xóa mã nguồn website $NAME"
else
    . /etc/wptt/wptt-ma-nguon-main 1
fi

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-ma-nguon-main 1
fi

