#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @since: 2022
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quản lý Cập nhật Update => Kích hoạt tự động update WPTangToc OLS      |"
echo "========================================================================="
echo ""
echo ""
. /etc/wptt/.wptt.conf
. /etc/wptt/tenmien

if [[ -f /etc/cron.d/wptangtoc-ols.cron ]]; then
	echo "Bạn đã kích ho tự động cập nhật WPTangToc OLS trước đó rồi"
	sleep 4
	. /etc/wptt/wptt-update-main
	exit
fi

echo -n "Bạn muốn tự động cập nhật WPTangToc OLS vào lúc mấy giờ ?[0-23]: "
read gio

if [[ ! $gio =~ ^-?[0-9]+$ ]]; then
	echo "Bạn không nhập sai dữ liệu, hệ thống sẽ chọn tự động là 1 giờ sáng"
	gio="1"
fi

if (( "$gio" > "23" )); then
	echo "Bạn không nhập sai dữ liệu, hệ thống sẽ chọn tự động là 1 giờ sáng"
	gio="1"
fi

if [[ "$gio" = "" ]]; then
	gio="1"
	echo "Bạn không nhập dữ liệu hệ thống sẽ tự động chọn là 1 giờ sáng"
fi
echo "Xác nhận bạn muốn tự động cập vào $gio giờ"
echo "-------------------------------------------------------------------------"
echo ""
echo ""

. /etc/wptt/wptt-times-tuan

echo "Bạn muốn tự động cập nhật vào thứ mấy? : "

tuan
if [ "$thu" = "0" ] || [ "$thu" = "7" ]; then
	thu12="chủ nhật hàng tuần"
fi
if [ "$thu" = "1" ]; then
	thu12="thứ hai hàng tuần"
fi
if [ "$thu" = "2" ]; then
	thu12="thứ ba hàng tuần"
fi
if [ "$thu" = "3" ]; then
	thu12="thứ tư hàng tuần"
fi
if [ "$thu" = "4" ]; then
	thu12="thứ năm hàng tuần"
fi
if [ "$thu" = "5" ]; then
	thu12="thứ sáu hàng tuần"
fi
if [ "$thu" = "6" ]; then
	thu12="thứ bảy hàng tuần"
fi

if [ "$thu" = "*" ]; then
	thu12="hàng ngày"
fi


read -p "bạn có muốn chắc tự động cập nhật WPTangToc OLS vào lúc $gio giờ $thu12 ? [y/n] " response
if [[ "$response" = "y" ]]; then

	cat >"/etc/cron.d/wptangtoc-ols.cron" <<END
0 $gio * * $thu root /etc/wptt/wptt-update-wptangtoc-ols >/dev/null 2>&1
END
	systemctl restart crond.service

	echo "-------------------------------------------------------------------------"
	echo "Hệ thống sẽ tự động cập nhật WPTangToc OLS vào $gio giờ $thu12 hàng tuần.      "
	echo "-------------------------------------------------------------------------"
	echo "Quá trình cập nhật chúng tôi cam kết sẽ không bao giờ bị downtimes máy chủ vì cập nahạt WPTangToc OLS"
	echo "Cảm ơn bạn đã lựa chọn WPTangToc OLS"
	echo "Kích hoạt thành công tự động update WPTangToc OLS"
fi

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-update-main 1
fi

