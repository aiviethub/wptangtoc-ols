		"${options[29]}")
			"/etc/wptt/wptt-gia-lap-main" 98
			;;

		"${options[30]}")
			"/etc/wptt/wptt-donate" 98
			;;

		"${options[31]}")
			"/etc/wptt/wptt-nhom-fb" 98
			;;

		"${options[32]}")
			"/etc/wptt/lang-main" 98
			;;

		"${options[33]}")
			"/etc/wptt/wptt-add-one-main" 98
			;;
		*) . /etc/wptt/wptt-status2 && ps -aef | grep 'bash\|python' | grep '/etc/wptt\|/bin/wptangtoc' | grep -v grep | grep -v 'preload'| grep -v 'status' | grep -v 'mysql' | grep -v 'zip' | awk '{print $2}' | xargs kill -9 >/dev/null 2>&1| echo 'Hoàn tất thoát menu WPTangToc OLS' | tr -s '\n' ' ' ;;
	esac
