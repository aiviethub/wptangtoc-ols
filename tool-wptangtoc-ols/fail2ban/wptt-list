#!/bin/bash
clear
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quản lý Mở/khóa IP => Danh sách IP bị khóa                             |"
echo "========================================================================="
echo ""
echo ""

block_ip_list=$(zgrep -h "Ban " /var/log/fail2ban.log* | awk '{print $NF}' | sort | uniq)
block_ip_list+=$(cat /usr/local/lsws/conf/httpd_config.conf |grep 'deny'| grep -Eo -m 1 '[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}')
block_ip_list=$(echo $block_ip_list|uniq| tr ' ' '\n')
echo $block_ip_list

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-khoa-ip-main 1
fi

