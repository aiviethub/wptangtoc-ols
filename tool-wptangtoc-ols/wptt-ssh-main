if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi

. /etc/wptt/.wptt.conf
if [[ $ngon_ngu = '' ]];then
	ngon_ngu='vi'
fi
. /etc/wptt/lang/$ngon_ngu.sh

echo ""
echo ""
echo "$quan_ly_ssh:"
echo ""
options=(
    "$thay_doi_password_ssh"            #1
    "$thay_doi_port_ssh"            #2
    "$thiet_lap_canh_bao_login_ssh_qua_telegram" #5
    "$bat_tat_dang_nhap_username_rieng_domain" #6
)
PS3="
$(tput setab 0)$nhap_lua_chon_cua_ban (1-${#options[@]}) [0=$exit_thoat]:$(tput sgr0) "
select opt in "${options[@]}"; do
    case $opt in
    "${options[0]}")
        "/etc/wptt/ssh/wptt-passwd" 98
        ;;
    "${options[1]}")
        "/etc/wptt/ssh/wptt-ssh-port" 98
        ;;

    "${options[2]}")
        "/etc/wptt/bao-mat/thong-bao-login-ssh" 98
        ;;

    "${options[3]}")
		"/etc/wptt/domain/wptt-khoi-tao-user" 98
        ;;
    *) wptangtoc 1 ;;
    esac
done
