#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2022
if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi
echo ""
echo ""
echo "Quản lý SSH/SFTP:"
echo ""
options=(
    "Thay đổi PassWord"            #1
    "Thay đổi port SSH/SFTP"            #2
    "Thay đổi user root"           #3
    "Khôi phục user root"          #4
    "Thiết lập cảnh báo login SSH qua telegram" #5
)
PS3="
Nhap lua chon cua ban (1-${#options[@]}) [0=Thoat]: "
select opt in "${options[@]}"; do
    case $opt in

    "${options[0]}")
        "/etc/wptt/ssh/wptt-passwd" 98
        ;;
    "${options[1]}")
        "/etc/wptt/ssh/wptt-ssh-port" 98
        ;;

    "${options[2]}")
        "/etc/wptt/ssh/wptt-user-root-changer" 98
        ;;

    "${options[3]}")
        "/etc/wptt/ssh/wptt-user-root-quay" 98
        ;;

    "${options[4]}")
        "/etc/wptt/bao-mat/thong-bao-login-ssh" 98
        ;;
    *) wptangtoc 1 ;;
    esac
done
