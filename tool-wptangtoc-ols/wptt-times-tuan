#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @since: 2025
. /etc/wptt/.wptt.conf
if [[ $ngon_ngu = '' ]];then
	ngon_ngu='vi'
fi
. /etc/wptt/lang/$ngon_ngu.sh

function tuan() {
prompt="$nhap_lua_chon_cua_ban [1-7]: "
thu="1"
if [[ $ngon_ngu = 'vi' ]];then
options=("Thứ hai" "Thứ ba" "Thứ tư" "Thứ năm" "Thứ sáu" "Thứ bảy" "Chủ nhật" "Hàng ngày")
fi
if [[ $ngon_ngu = 'en' ]];then
options=("Monday" "Tuesday" "Wednesday" "Thursday" "Friday" "Saturday" "Sunday" "Daily / Everyday")
fi

PS3="$prompt"
select opt in "${options[@]}"; do

  case "$REPLY" in
  1)
    thu="1"
    break
    ;;
  2)
    thu="2"
    break
    ;;
     3)
    thu="3"
    break
    ;;
      4)
    thu="4"
    break
    ;;
      5)
    thu="5"
    break
    ;;
      6)
    thu="6"
    break
    ;;
      7)
    thu="0"
    break
    ;;

    8)
    thu="*"
    break
    ;;

  $((${#options[@]} + 1)))
    printf "\nHe thong chon thu hai\n"
    break
    ;;
  *)
    printf "Ban nhap sai, he thong chon thu hai\n"
    break
    ;;
  esac

done
}
