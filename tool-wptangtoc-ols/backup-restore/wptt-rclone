#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2022
clear
echo ""
echo ""
echo ""
echo "==================================================================================="
echo "|Sao luu & khoi phuc => Thiet lap Rclone backup luu tru dam may Google Driver 	|"
echo "==================================================================================="
echo ""
echo ""

if [[ ! -d /root/.config ]];then
mkdir -p /root/.config
chmod 751 /root/.config
fi

duong_dan_rclone="/root/.config/rclone/rclone.conf"
if [[ ! -f $duong_dan_rclone ]]; then
	echo "Dang tien hanh cai dat Rclone Google Driver..."
	echo '               .::------------:--                
               -==-------------=##+               
              -====-----------+####*.             
            .=======---------+######*.            
           .=========-------*#########:           
          .============----*###########-          
         :==============--*#############-         
        :===============-+###############=        
       -===============:  =###############+       
      -===============:    =###############+      
     -===============:      -###############*.    
   .================.        :###############*.   
  .================.          :################:  
 .===============-.            .*###############: 
:===============-                +###############-
----------------:................:+***************
:--------------==================================:
 :------------==================================: 
  .----------==================================:  
   .-------===================================:   
    .-----===================================.    
      :--===================================.     
       .-================================-:       
'
	sleep 3
	cd /tmp
	rm -f install.sh
	curl -sO https://rclone.org/install.sh && bash install.sh
	rm -f install.sh
phienban=1.55.0
wget https://downloads.rclone.org/v${phienban}/rclone-v${phienban}-linux-amd64.zip
unzip -o rclone-v${phienban}-linux-amd64.zip
cd rclone-v${phienban}-linux-amd64
cp -r rclone /usr/sbin/
chmod 755 /usr/sbin/rclone
fi


checkdathietlap=$(grep -rnw '/root/.config/rclone/rclone.conf' -e "wptangtoc" >>/dev/null 2>&1 && echo 2)
if [[ $checkdathietlap ]]; then
	clear
	echo "Ban da cau hinh rclone roi"
	exit
fi


echo "Copy https://bit.ly/3zIr4K4 sau đó paste vào trình duyệt để đã đăng nhập tài khoản google để lấy id:"
read -p "Nhập mã id của bạn [0=Thoat]: " checkid
echo "Dang tien hanh cau hinh..."

if [[ "$checkid" = "0" ]]; then
	clear
	exit
fi

if [[ "$checkid" = "" ]]; then
	clear
	exit
fi

checktool="/usr/bin/expect"
if [[ ! -f $checktool ]]; then
	yum install expect -y
fi

thietlap=$(expect -c "
spawn rclone config
expect \"n\"
send \"n\r\"
expect \"name\"
send \"wptangtoc\r\"
expect \"Storage\"
send \"drive\r\"
expect \"client_id\"
send \"\r\"
expect \"client_secret\"
send \"\r\"
expect \"scope\"
send \"1\r\"
expect \"root_folder_id\"
send \"\r\"
expect \"service_account_file\"
send \"\r\"
expect \"n\"
send \"n\r\"
expect \"n\"
send \"n\r\"
expect \"verification\"
send \"$checkid\r\"
expect \"n\"
send \"n\r\"
expect \"n\"
send \"y\r\"
expect eof
")

. /etc/wptt/echo-color
checkdathietlapxacthuc=$(grep -rnw '/root/.config/rclone/rclone.conf' -e "wptangtoc" >>/dev/null 2>&1 && echo 2)
if [[ $checkdathietlapxacthuc ]]; then
	echoDone "==================================================================================="
	echoDone "Thiet lap Google Driver hoan tat"
	echoDone "==================================================================================="
else
	echoDo "==================================================================================="
	echoDo "Thiet lap Google Driver khong thanh cong"
	echoDo "==================================================================================="
fi

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-backup-restore-main 1
fi

