#!/bin/bash
clear

echo ""
echo ""
echo ""
echo "==================================================================================="
echo "|Sao lưu & khôi phục => Hủy thiết lập Rclone backup lữu trữ đám mây Google Driver |"
echo "==================================================================================="
echo ""
echo ""
. /etc/wptt/echo-color
checkdathietlap=$(grep -rnw '/root/.config/rclone/rclone.conf' -e "wptangtoc" >>/dev/null 2>&1 && echo 2)
if [[ $checkdathietlap != "2" ]]; then
    clear
    echo "Bạn chưa thiết lập rclone lưu trữ Google Driver"
    sleep 3
    . /etc/wptt/wptt-backup-restore-main 1
    exit
fi

if [[ $checkdathietlap = "2" ]]; then
	read -p "Xác nhận xóa đăng ký Google Driver Rclone (y/n)" xacnhan
	if [[ $xacnhan = 'y' ]];then
		_runing "Hủy đăng ký Google Driver rclone"
    echo "" >/root/.config/rclone/rclone.conf
		_rundone "Hủy đăng ký Google Driver rclone"
	fi
fi

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-backup-restore-main 1
fi

