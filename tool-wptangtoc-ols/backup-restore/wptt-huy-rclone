#!/bin/bash
clear

echo ""
echo ""
echo ""
echo "==================================================================================="
echo "|Sao luu & khoi phuc => Huy thiet lap Rclone backup luu tru dam may google driver |"
echo "==================================================================================="
echo ""
echo ""

checkdathietlap=$(grep -rnw '/root/.config/rclone/rclone.conf' -e "wptangtoc" >>/dev/null 2>&1 && echo 2)
if [[ $checkdathietlap != "2" ]]; then
    clear
    echo "Ban chua thiet lap rclone luu tru Google Driver"
    sleep 3
    . /etc/wptt/wptt-backup-restore-main
    exit
fi

if [[ $checkdathietlap = "2" ]]; then
    echo "" >/root/.config/rclone/rclone.conf
    echo "da hoan tat xoa thiet lap rclone Google Driver"
    echo '               .::------------:--                
               -==-------------=##+               
              -====-----------+####*.             
            .=======---------+######*.            
           .=========-------*#########:           
          .============----*###########-          
         :==============--*#############-         
        :===============-+###############=        
       -===============:  =###############+       
      -===============:    =###############+      
     -===============:      -###############*.    
   .================.        :###############*.   
  .================.          :################:  
 .===============-.            .*###############: 
:===============-                +###############-
----------------:................:+***************
:--------------==================================:
 :------------==================================: 
  .----------==================================:  
   .-------===================================:   
    .-----===================================.    
      :--===================================.     
       .-================================-:       
'
fi

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-backup-restore-main 1
fi

