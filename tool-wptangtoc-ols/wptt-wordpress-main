#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2025

if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi

. /etc/wptt/.wptt.conf
if [[ $ngon_ngu = '' ]];then
	ngon_ngu='vi'
fi
. /etc/wptt/lang/$ngon_ngu.sh


# --- Định nghĩa Menu và Hành động ---
echo ""
echo ""
echo "$quan_ly_wordpress:"
echo ""
options=(
  "$quan_ly_ $cap_nhat WordPress"                              #0
  "$tai plugin LiteSpeed Cache"                           #6
  "On/Off $chinh_sua_code_truc_tiep_wp_admin_wordpress"       #7
  "$truy_van_va_thay_the database"                   #9
  "$bat $che_do_bao_tri"                                   #10
  "$tat $che_do_bao_tri"                                   #11
  "$toi_uu $hinh_anh"                                  #12
  "Unix stocket config database"                         #13
  "$bat $toi_uu wp-cron"                                   #14
  "$tat $toi_uu wp-cron"                               #15
  "$tang_gioi_han_ram WordPress"                      #16
  "$thay_doi salt cookie"                       #17
  "$tat wp debug WordPress"                               #18
  "$bat wp debug WordPress"                               #19
  "$toi_uu Heartbeat api"                                 #20
  "$tat XML RPC WordPress"                                #21
  "$thay_doi PassWord wp-admin wordpress"                      #22
  "login wp-admin magic link"                            #23
  "$xoa transient database"                               #24
  "$thay_doi $tien_to database"                            #25
  "Rewrite permalink"                                    #26
  "$reset_lai_ve_wordpress_moi_hoan_toan"                 #27
  "$tai_tao_lai Thumbnail"                                #28
  "$kiem_tra $kham_suc_khoe WordPress"                              #29
  "$kiem_tra autoload database"                                    #30
  "$cap_nhat Url home && siteurl"                         #31
  "$kiem_tra $bao_mat mã nguồn mã hóa base64"              #33
  "$kiem_tra $toc_do hook" 								 #34
  "$xoa $binh_luan spam"                                   #35
  "$nhap_du_lieu $toi_uu Plugin LiteSpeed Cache"  		#36
  "$thiet_lap WordPress Multisite"  						#37
)

# Hàm thực thi hành động dựa trên index
run_action() {
    local index=$1
    local script_path=""
    local script_args="98" # Tham số 98 cho tất cả các script này

    case $index in
		0) script_path="/etc/wptt/wordpress/wptt-update-wordpress-main" ;;
		1) script_path="/etc/wptt/wordpress/tai-plugin-litespeed-cache" ;;
		2) script_path="/etc/wptt/wordpress/chinh-sua-truc-tiep-admin-wordpress" ;;
		3) script_path="/etc/wptt/wordpress/query-truyvan" ;;
		4) script_path="/etc/wptt/wordpress/bat-baotri" ;;
		5) script_path="/etc/wptt/wordpress/tat-baotri" ;;
		6) script_path="/etc/wptt/wordpress/image" ;;
		7) script_path="/etc/wptt/wordpress/unix-stocket-wpconfig" ;; # Tên file 'stocket'
		8) script_path="/etc/wptt/wordpress/wp-cron-job" ;;
		9) script_path="/etc/wptt/wordpress/tat-wp-cron-job" ;;
		10) script_path="/etc/wptt/wordpress/tang-gioi-han-ram-wordpress" ;;
		11) script_path="/etc/wptt/wordpress/thay-salt" ;;
		12) script_path="/etc/wptt/wordpress/wp-debug" ;;        # Tắt debug? Tên file hơi chung chung
		13) script_path="/etc/wptt/wordpress/bat-wp-debug" ;;    # Bật debug?
		14) script_path="/etc/wptt/wordpress/plugin-heartbeat-wptangtoc" ;;
		15) script_path="/etc/wptt/wordpress/plugin-xml-rpc-wptangtoc" ;;
		16) script_path="/etc/wptt/wordpress/passwd-wp" ;;
		17) script_path="/etc/wptt/wordpress/login-wpadmin-magic" ;;
		18) script_path="/etc/wptt/wordpress/transient" ;;
		19) script_path="/etc/wptt/wordpress/thay-doi-tien-to" ;;
		20) script_path="/etc/wptt/wordpress/rewrite" ;;
		21) script_path="/etc/wptt/wordpress/wptt-wipe-wordpress" ;;
		22) script_path="/etc/wptt/wordpress/wptt-render-thumbnail" ;;
		23) script_path="/etc/wptt/wordpress/kham-suc-khoe-wordpress" ;;
		24) script_path="/etc/wptt/wordpress/check-autoload" ;;
		25) script_path="/etc/wptt/wordpress/thay-url-option" ;;
		26) script_path="/etc/wptt/wordpress/check-decode-base64" ;;
		27) script_path="/etc/wptt/wordpress/check-hook-speed" ;;
		28) script_path="/etc/wptt/wordpress/xoa-binh-luan-spam" ;;
		29) script_path="/etc/wptt/wordpress/nhap-du-lieu-litespeed-wptangtoc" ;;
		30) script_path="/etc/wptt/wordpress/wordpress-multisite" ;;
        *) echo "${lua_chon_khong_hop_le:-Lựa chọn không hợp lệ}: Index $index."; return 1 ;;
    esac

    # Kiểm tra và chạy script con
    if [[ -x "$script_path" ]]; then
        "$script_path" "$script_args"
    else
        echo "Lỗi: Không tìm thấy hoặc không thể thực thi script '$script_path'."
    fi
    # read -rp "Nhấn Enter để quay lại menu..." # Bỏ comment nếu muốn tạm dừng
}

. /etc/wptt/wptt-callback-menu-chon

