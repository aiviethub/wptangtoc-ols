#!/bin/bash
domain=$1
. /etc/wptt/.wptt.conf
. /etc/wptt/echo-color
_runing "Phân quyền website $domain"
. /etc/wptt/vhost/."$domain".conf && chown -R "$User_name_vhost":"$User_name_vhost" /usr/local/lsws/"$domain"/html && find /usr/local/lsws/"$domain"/html -type d -exec chmod 755 {} \; && find /usr/local/lsws/"$domain"/html -type f -exec chmod 644 {} \;

if [[ -f /usr/local/lsws/"$domain"/html/index.php ]];then
chmod 444 /usr/local/lsws/"$domain"/html/index.php
fi

if [[ -f /usr/local/lsws/"$domain"/html/wp-config.php ]];then
chmod 600 /usr/local/lsws/"$domain"/html/wp-config.php && wp rewrite flush --allow-root --path=/usr/local/lsws/"$domain"/html >/dev/null 2>&1
fi

if [[ $id_dang_nhap_phpmyadmin && $Website_chinh = $domain && -d /usr/local/lsws/"$domain"/html/phpmyadmin ]];then
chown -R nobody:nobody /usr/local/lsws/"$domain"/html/phpmyadmin
fi

if [[ -d /usr/local/lsws/"$domain"/html/quan-ly-files ]];then
chmod 400 /usr/local/lsws/"$domain"/html/quan-ly-files/.password-giatuan.json
chmod 400 /usr/local/lsws/"$domain"/html/quan-ly-files/.user-giatuan.json
fi
_rundone "Phân quyền website $domain"
echo "========================================================================="
