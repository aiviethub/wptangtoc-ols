#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2024
if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi

. /etc/wptt/.wptt.conf
if [[ $ngon_ngu = '' ]];then
	ngon_ngu='vi'
fi
. /etc/wptt/lang/$ngon_ngu.sh

echo ""
echo ""
echo "$quan_ly_ngon_ngu:"
echo ""
options=(
    "$tieng_viet"                     #1
    "$tieng_anh"                      #2
)
PS3="
$nhap_lua_chon_cua_ban (1-${#options[@]}) [0=$exit_thoat]: "
select opt in "${options[@]}"; do
    case $opt in
    "${options[0]}")
		ngon_ngu="vi"
		break
        ;;
    "${options[1]}")
		ngon_ngu="en"
		break
        ;;
		$((${#options[@]} + 1)))
			printf "\nHe thong se cai dat ngon ngữ tiếng việt\n"
			break
			;;
		*)
			printf "Ban nhap sai, he thong cai dat ngon ngữ tiếng việt\n"
			break
			;;
    esac
done


sed -i '/ngon_ngu/d' /etc/wptt/.wptt.conf
echo "ngon_ngu=$ngon_ngu" >> /etc/wptt/.wptt.conf
if [[ $ngon_ngu = 'vi' ]];then
echo "Hoàn tất chuyển đổi ngôn ngữ sang tiếng Việt"
fi

if [[ $ngon_ngu = 'en' ]];then
echo "Completed language conversion English"
fi

wptangtoc 1
