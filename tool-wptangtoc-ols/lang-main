#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2024
if [[ $1 = "" ]];then
. /etc/wptt/wptt-header-menu
header_menu
else
	. /etc/wptt/echo-color
echoDo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-="
fi
ngon_ngu="vi"
echo ""
echo ""
echo "Chuyển đổi ngôn ngữ:"
echo ""
options=(
    "Tiếng Việt"                     #1
    "Tiếng Anh"                      #2
)
PS3="
Nhập lựa chọn của bạn (1-${#options[@]}) [0=Thoát]: "
select opt in "${options[@]}"; do
    case $opt in
    "${options[0]}")
		ngon_ngu="vi"
		break
        ;;
    "${options[1]}")
		ngon_ngu="en"
		break
        ;;
		$((${#options[@]} + 1)))
			printf "\nHe thong se cai dat ngon ngữ tiếng việt\n"
			break
			;;
		*)
			printf "Ban nhap sai, he thong cai dat ngon ngữ tiếng việt\n"
			break
			;;
    esac
done


sed -i '/ngon_ngu/d' /etc/wptt/.wptt.conf
echo "ngon_ngu=$ngon_ngu" >> /etc/wptt/.wptt.conf
echo "Hoàn tất chuyển đổi ngôn ngữ sang $ngon_ngu"
wptangtoc 1
