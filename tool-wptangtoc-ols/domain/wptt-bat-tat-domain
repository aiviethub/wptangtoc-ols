#!/bin/bash
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quan ly Domain => Bat/Tat domain                                 |"
echo "========================================================================="
. /etc/wptt/tenmien
echo ""
echo ""
echo "lua chon website muon bat/tat domain: "
lua_chon_NAME
echo ""

. /etc/wptt/echo-color
if [[ "$NAME" = "0" || "$NAME" = "" ]]; then
    . /etc/wptt/wptt-wordpress-main 1
fi

pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" ]]; then
    clear
    echoDo "Domain khong ton tai tren VPS."
    sleep 3
    . /etc/wptt/wptt-wordpress-main 1
    exit
fi

if [[ -f /usr/local/lsws/conf/vhosts/"$NAME"/"$NAME".conf.bkwptt ]];then
read -p 'Ban co dong bat lai website' dongybatlai

if [[ $dongybatlai = 'y' ]];then
mv /usr/local/lsws/conf/vhosts/"$NAME"/"$NAME".conf.bkwptt /usr/local/lsws/conf/vhosts/"$NAME"/"$NAME".conf.bkwptt
fi

else

read -p 'Ban co dong bat lai website' dongytat

if [[ $dongytat = 'y' ]];then
mv /usr/local/lsws/conf/vhosts/"$NAME"/"$NAME".conf /usr/local/lsws/conf/vhosts/"$NAME"/"$NAME".conf.bkwptt
fi

fi

fi

