read -p "Ban co muon gia han SSL Free? (y/n): " renew
if [[ "$renew" = "y" ]]; then
    /usr/bin/certbot renew --quiet
    /usr/local/lsws/bin/lswsctrl restart >/dev/null 2>&1
	. /etc/wptt/echo-color
