#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2022

. /etc/wptt/echo-color
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quản lý SSL => Xóa chứng chỉSSL FREE letsencrypt                      |"
echo "========================================================================="
. /etc/wptt/tenmien
echo ""
echo ""
echo "Lựa chọn website bạn muốn xóa chứng chỉSSL letsencrypt (HTTPS): "
echo ""
lua_chon_NAME

path="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$path" || "$NAME" = "0" ]]; then
    clear
	echo "Domain không tồn tại trên VPS này."
    . /etc/wptt/wptt-ssl-main 1
    exit
fi

check_ssl="/etc/letsencrypt/live/$NAME/cert.pem"
if [[ -f $check_ssl ]];then
echo "Bạn chưa cài đặt chứng chỉ SSL letsencrypt"
exit
fi

read -p "Bạn có muốn xóa chứng chỉ SSL letsencrypt website $NAME không? (y/n): " renew
if [[ "$renew" = "y" ]]; then
    certbot revoke --cert-path $check_ssl
    rm -rf /etc/letsencrypt/live/$NAME
    rm -f /etc/letsencrypt/renewal/$NAME.conf
else
    . /etc/wptt/wptt-ssl-main
    exit
fi

path2="/usr/local/lsws/$NAME/html/.htaccess"
grepwww=$(grep -c 'RewriteCond %{HTTP_HOST} ^www' $path2)
grepssl=$(grep -c 'RewriteCond %{HTTPS} !=on' $path2)

if [[ "$grepssl" != "0" ]]; then
    if [[ "$grepwww" = "0" ]]; then
        sed -i '/RewriteCond %{HTTPS} !=on/,+1d' "$path2"
    else
        sed -i '/RewriteCond %{HTTP_HOST} ^www/,+3d' "$path2"
    fi
fi

/usr/local/lsws/bin/lswsctrl restart >/dev/null 2>&1
echo "==================================================================="
echoDone "                   Xóa chứng chỉ SSL website $NAME thành công            "
echo "==================================================================="
echo "Cong cu phat trien boi	: Gia Tuấn"
echo "Yeu Cau Ho tro		: wptangtoc.com/lien-he"
echo "Tai tro phat trien	: wptangtoc.com/donate"
echo "==================================================================="


check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-ssl-main 1
fi
