#!/bin/bash
clear
. /etc/wptt/.wptt.conf
RED='\033[0;31m'
NC='\033[0m'
ols1=$(systemctl status lshttpd.service | grep 'enabled' | cut -f2 -d':' | xargs | cut -f1 -d' ' | xargs)
mariadb1=$(systemctl status mariadb.service | grep 'Active' | cut -f2 -d':' | xargs | cut -f1 -d' ' | xargs)

if [[ "$ols1" = "loaded" ]]; then
    ols="Hoat dong tot"
else
    echo "========================================================================="
    ols2="Websever LiteSpeed dang bi gap su co"
    /usr/local/lsws/bin/lswsctrl restart
    echo "========================================================================="
fi

if [[ "$mariadb1" = "active" ]]; then
    mariadb="Hoat dong tot"
else
    echo "========================================================================="
    mariadb2="MariaDB Database dang bi gap su co"
    systemctl restart mariadb.service
    echo "========================================================================="
fi

echo -e "${RED}+-----------------------------------------------------------------------+"
echo "|                        WPTANGTOC OLS phien ban: $version_wptangtoc_ols		|"
echo "|                          Phat trien boi: Gia Tuan			|"
echo -e "+-----------------------------------------------------------------------+ ${NC}"
echo "========================================================================="
if [[ "$ols1" = "loaded" && "$mariadb1" = "active" ]]; then
    hoatdong="hoat dong tot"
else
    hoatdong="Tinh trang may chu	: may chu dang co van de, can phai khac phuc"
    echo "$mariadb2"
    echo "$ols2"
fi
checkmariaversion=$(mysqld --version | grep mysqld | cut -c 13-19)
echo "Tinh trang may chu: $hoatdong"
echo "MariaDB: $hoatdong - MariaDB phien ban: $checkmariaversion"
echo "-------------------------------------------------------------------------"
echo "Huong dan: https://wptangtoc.com/wptangtoc-ols-huong-dan/"
echo "-------------------------------------------------------------------------"
echo ""
echo ""
echo "Quan ly database:"
echo ""
options=(
    "Them database"                    #1
    "Xoa database"                     #2
    "Sao luu database"                 #3
    "Khoi phuc database"               #4
    "Danh sach database"               #5
    "Toi uu database"                  #6
    "Xoa toan bo du lieu cua database" #7
    "Thay doi password database"       #8
    "Ket noi database voi WordPress"   #9
    "Thong tin tai khoan database"     #10
)
PS3="
Nhap lua chon cua ban (1-${#options[@]}) [0=Thoat]: "
select opt in "${options[@]}"; do
    case $opt in

    "${options[0]}")
        "/etc/wptt/db/wptt-them-database"
        ;;
    "${options[1]}")
        "/etc/wptt/db/wptt-xoa-database"
        ;;
    "${options[2]}")
        "/etc/wptt/db/wptt-saoluu-database"
        ;;
    "${options[3]}")
        "/etc/wptt/db/wptt-nhapdatabase"
        ;;
    "${options[4]}")
        "/etc/wptt/db/wptt-thongtin-db"
        ;;

    "${options[5]}")
        "/etc/wptt/wordpress/all-database"
        ;;

    "${options[6]}")
        "/etc/wptt/db/wptt-wipe-database"
        ;;

    "${options[7]}")
        "/etc/wptt/db/wptt-thay-doi-passwd-database"
        ;;

    "${options[8]}")
        "/etc/wptt/db/wptt-ket-noi"
        ;;

    "${options[9]}")
        "/etc/wptt/db/wptt-thongtin-db-tk"
        ;;
    *) wptangtoc ;;
    esac
done
