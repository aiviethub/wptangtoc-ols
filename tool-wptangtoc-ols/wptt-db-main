#!/bin/bash
. /etc/wptt/wptt-header-menu
header_menu
echo ""
echo ""
echo "Quan ly database:"
echo ""
options=(
    "Them database"                     #1
    "Xoa database"                      #2
    "Sao luu database"                  #3
    "Khoi phuc database"                #4
    "Danh sach database"                #5
    "Toi uu database ALL"               #6
    "sua chua database ALL"             #7
    "Xoa toan bo du lieu cua database"  #8
    "Thay doi password database"        #9
    "Ket noi database voi WordPress"    #10
    "Thong tin tai khoan database"      #11
    "Thay doi phien ban maria database" #12
)
PS3="
Nhap lua chon cua ban (1-${#options[@]}) [0=Thoat]: "
select opt in "${options[@]}"; do
    case $opt in

    "${options[0]}")
        "/etc/wptt/db/wptt-them-database"
        ;;
    "${options[1]}")
        "/etc/wptt/db/wptt-xoa-database"
        ;;
    "${options[2]}")
        "/etc/wptt/db/wptt-saoluu-database"
        ;;
    "${options[3]}")
        "/etc/wptt/db/wptt-nhapdatabase"
        ;;
    "${options[4]}")
        "/etc/wptt/db/wptt-thongtin-db"
        ;;

    "${options[5]}")
        "/etc/wptt/wordpress/all-database"
        ;;

    "${options[6]}")
        "/etc/wptt/wordpress/all-database-sua-chua"
        ;;

    "${options[7]}")
        "/etc/wptt/db/wptt-wipe-database"
        ;;

    "${options[8]}")
        "/etc/wptt/db/wptt-thay-doi-passwd-database"
        ;;

    "${options[9]}")
        "/etc/wptt/db/wptt-ket-noi"
        ;;

    "${options[10]}")
        "/etc/wptt/db/wptt-thongtin-db-tk"
        ;;

    "${options[11]}")
        "/etc/wptt/db/wptt-thay-doi-version-database-maria"
        ;;
    *) wptangtoc ;;
    esac
done
