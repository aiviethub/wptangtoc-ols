#!/bin/bash
#
#
# @author: Gia Tuáº¥n
# @website: https://wptangtoc.com
# @since: 2021
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quan ly Domain => Xoa Parked alias domain                              |"
echo "========================================================================="
echo ""
echo ""
. /etc/wptt/tenmien
echo ""
echo ""
echo "lua chon domain ban muon xoa Parked alias domain: "
echo ""
lua_chon_NAME
domain="$NAME"
path="/etc/wptt/vhost/.$domain.conf"
if [[ ! -f "$path" || "$NAME" = "0" ]]; then
    clear
    echo "Domain khong ton tai tren VPS, vui long them website"
    echo
    exit
fi

check_alias=$(cat /usr/local/lsws/conf/vhosts/$NAME/$NAME.conf | grep -c "vhAliases")
if [[ "$check_alias" = "0" ]];then
echo "Domain $NAME chua tung kich hoat alias domain"
exit
fi
sed -i "/$NAME $NAME/d" /usr/local/lsws/conf/httpd_config.conf
sed -i "/listener http/a map 		$NAME $NAME" /usr/local/lsws/conf/httpd_config.conf
sed -i "/vhAliases/d" /usr/local/lsws/conf/vhosts/$NAME/$NAME.conf
/usr/local/lsws/bin/lswsctrl restart
echo "========================================================================="
echo "Xoa alias hanh cong                         "
echo "========================================================================="
echo "Cong cu phat trien boi: Gia Tuan"
echo "Ho tro phat trien: https://wptangtoc.com/donate"
echo "========================================================================="
