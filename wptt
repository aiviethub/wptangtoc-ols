#!/bin/bash
ls --color=auto
read -p "thu muc ma nguon website: " domain
if [[ -d "$domain" ]]; then
zip -r $domain/backup-wptangtoc-$domain.zip $domain/* -x "$domain/wp-content/ai1wm-backups/*" -x "$domain/wp-content/cache/*" -x "$domain/wp-content/updraft/*"
database="$domain/backup-wptangtoc-$domain.zip"
if [[ ! -f "$database" ]]; then
echo "qua trinh bi loi"
exit
fi
mysqldump -u `cat $domain/wp-config.php | grep DB_USER | cut -d \' -f4` -p"`cat $domain/wp-config.php | grep DB_PASSWORD | cut -d \' -f4`"  `cat $domain/wp-config.php | grep DB_NAME | cut -d \' -f4` --single-transaction --quick --lock-tables=false > $domain/database-wptangtoc-$domain.sql
echo "===================================================================="
if [[ "$domain" = "public_html" ]]; then
echo "duong dan tai file: wget -P /home/giatuan/backup-website https://domain.com/database-wptangtoc-$domain.sql"
echo "duong dan tai file: wget -P /home/giatuan/backup-website https://domain.com/backup-wptangtoc-$domain.zip"
rm -f wptt
else
echo "duong dan tai file: wget -P /home/giatuan/backup-website https://${domain}/database-wptangtoc-$domain.sql"
echo "duong dan tai file: wget -P /home/giatuan/backup-website https://${domain}/backup-wptangtoc-$domain.zip"
rm -f wptt
fi
else
echo "nhap sai domain"
rm -f wptt
fi
