#!/bin/bash
echo ""
echo ""
echo ""
echo "========================================================================="
echo "|Quản lý Database => Xóa toàn bộ dữ liệu database                       |"
echo "========================================================================="
. /etc/wptt-user/.wptt.conf
NAME=$1
if [[ $NAME = '98' ]];then
NAME=''
fi

if [[ $NAME = '' ]];then
. /etc/wptt-user/tenmien
echo ""
echo ""
echo "Lựa chọn website bạn muốn xóa toàn bộ dữ liệu Database: "
echo ""
lua_chon_NAME
fi

. /etc/wptt-user/echo-color
if [[ "$NAME" = "0" || "$NAME" = "" ]]; then
    . /etc/wptt-user/wptt-wordpress-main 1
fi

pathcheck="/etc/wptt-user/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" ]]; then
    clear
	echoDo "Tên miền không tồn tại trên hệ thống này"
    sleep 3
	. /etc/wptt-user/wptt-db-main 1
    exit
fi

_runing "Xóa toàn bộ dữ liệu database của website $NAME"
. /etc/wptt/vhost/."$NAME".conf
mysql -u "$DB_User_web" -p"$DB_Password_web" -e "DROP DATABASE IF EXISTS ${DB_Name_web}"
mysql -u "$DB_User_web" -p"$DB_Password_web" -e "CREATE DATABASE IF NOT EXISTS ${DB_Name_web}"

_rundone "Xóa toàn bộ dữ liệu database của website $NAME"

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt-user/wptt-db-main 1
fi

