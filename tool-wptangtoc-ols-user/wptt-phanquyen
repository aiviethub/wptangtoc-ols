#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2022
echo "========================================================================="
echo ""
echo ""
. /etc/wptt/tenmien
echo "Lựa chọn website bạn muốn phân quyền: "
echo ""
lua_chon_NAME

if [[ "$NAME" = "0" || "$NAME" = "" ]]; then
    wptangtoc 1
fi

. /etc/wptt/echo-color
pathcheck="/etc/wptt/vhost/.$NAME.conf"
if [[ ! -f "$pathcheck" ]]; then
    clear
	echoDo "Tên miền không tồn tại trên hệ thống này"
    sleep 3
    wptangtoc 1
    exit
fi

. /etc/wptt/.wptt.conf
. /etc/wptt/vhost/."$NAME".conf
_runing "Phân quyền website $NAME"
chown -R "$User_name_vhost":"$User_name_vhost" /usr/local/lsws/"$NAME"/html
find /usr/local/lsws/"$NAME"/html -type d -exec chmod 755 {} \;
find /usr/local/lsws/"$NAME"/html -type f -exec chmod 644 {} \;
chmod 444 /usr/local/lsws/"$NAME"/html/index.php
chmod 600 /usr/local/lsws/"$NAME"/html/wp-config.php

if [[ -f /usr/local/lsws/"$NAME"/html/wp-load.php ]];then
wp rewrite flush --allow-root --path=/usr/local/lsws/"$NAME"/html >/dev/null 2>&1
fi

if [[ -d /usr/local/lsws/"$NAME"/html/phpmyadmin && $Website_chinh = $NAME ]];then
chown -R nobody:nobody /usr/local/lsws/"$NAME"/html/phpmyadmin
fi

if [[ -d /usr/local/lsws/"$NAME"/html/quan-ly-files ]];then
chmod 400 /usr/local/lsws/"$NAME"/quan-ly-files/.password-giatuan.json
chmod 400 /usr/local/lsws/"$NAME"/quan-ly-files/.user-giatuan.json
fi
/usr/local/lsws/bin/lswsctrl restart >/dev/null 2>&1
_rundone "Phân quyền website $NAME"

clear
echoDone "==================================================================="
echoDone "Phân quyền website $NAME hoàn tất                 "
echoDone "==================================================================="
echoDone "Phân quyền thư mục :/usr/local/lsws/$NAME/html                "
echoDone "==================================================================="
echo "==================================================================="
echo "Phần mềm phát triển bởi: Gia Tuấn"
echo "==================================================================="

check_menu_wptangtoc_active=$1
if [[ $check_menu_wptangtoc_active = "98" ]];then
. /etc/wptt/wptt-domain-main 1
fi

