#!/bin/bash
echo "Cam on ban da su dung WPTangToc OLS"

if [[ ! -f /etc/cron.d/check-version-wptangtoc-ols.cron ]];then
gio=$(shuf -i0-12 -n1)
gio2=$(shuf -i1-12 -n1)
phut=$(shuf -i0-60 -n1)

if [[ $gio = '' ]];then
	gio='0'
	gio2='12'
	phut='15'
fi

cat >"/etc/cron.d/check-version-wptangtoc-ols.cron" <<END
$phut $gio,$gio2 * * * root /etc/wptt/update/wptt-check-cron-version-update 
END

systemctl restart crond.service
fi




