#!/bin/bash
echo "Cam on ban da su dung WPTangToc OLS"
yum remove yum-cron -y
if [[ ! -f /tmp/maria-giatuan.txt ]];then
tong_ram_byte=$(awk '/MemTotal/ {print $2}' /proc/meminfo)
rong_ram_mb=$(echo "scale=0;${tong_ram_byte}/1024" | bc)
if [[ "$rong_ram_mb" = "" ]]; then
  rong_ram_mb="2048"
fi
tong_ram_mb_db=$(echo "scale=0;${rong_ram_mb}/1.4" | bc)
sed -i '/innodb_buffer_pool_size/d' /etc/my.cnf.d/server.cnf
echo "innodb_buffer_pool_size= ${tong_ram_mb_db}M" /etc/my.cnf.d/server.cnf
systemctl restart mariadb.service
echo '1' > /tmp/maria-giatuan.txt
fi


lsphp=($(ls /usr/local/lsws | grep 'lsphp' | sed 's/^lsphp//g'))
for allphp in ${lsphp[@]};do
echo "Tien hanh cap nhat PHP $allphp :"
yum install lsphp${allphp}-intl -y


echo "Cam on ban da su dung WPTangToc OLS"




