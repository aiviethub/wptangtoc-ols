#!/bin/bash
echo "Cam on ban da su dung WPTangToc OLS"

if [[ ! -f /etc/cron.d/check-version-wptangtoc-ols.cron ]];then
gio=$(shuf -i0-23 -n1)
gio2=$(shuf -i1-23 -n1)

if [[ $gio2 = $gio ]];then
	gio2=$(expr $gio2 + 1)
fi

if [[ $gio2 = 24 ]];then
gio2=$(expr $gio2 - 8)
fi

phut=$(shuf -i0-60 -n1)

if [[ $gio = '' ]];then
	gio='0'
	gio2='12'
	phut='15'
fi

cat >"/etc/cron.d/check-version-wptangtoc-ols.cron" <<END
$phut $gio,$gio2 * * * root /etc/wptt/update/wptt-check-cron-version-update 
END

systemctl restart crond.service
fi

. /etc/wptt/.wptt.conf
if [[ $wptangtoc_ols_giatuan = "1" ]]; then
sed -i "cd /wptangtoc-ols" /root/.bashrc
fi
