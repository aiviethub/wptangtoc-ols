#!/bin/bash

for entry in $(ls -A /etc/wptt/vhost); do
  domain=$(echo $entry | sed 's/^.//' | sed 's/.conf//')
  path="/usr/local/lsws/$domain/html/danh-sach-website-wptangtoc-ols.txt"
  i=1
  if [[ -f "$path" ]]; then
  domain_them=($(cat $path))
  rm -f $path
  fi
done

if [[ $domain_them = '' ]];then
	echo "Không xác định được danh sách"
	exit
fi

domain_trung_lap=($(ls -A /etc/wptt/vhost | sed 's/^.//' | sed 's/.conf//'))

echo '--------------------------------------------------'
  for NAME in ${domain_them[@]}; do
	  sleep 3
	if [[ ! "${domain_trung_lap[@]}" =~ "${NAME}" ]];then
		echo "Them domain $NAME vao WPTangToc OLS"
		. /etc/wptt/domain/wptt-themwebsite $NAME
	fi
done
echo '--------------------------------------------------'


. /etc/wptt/.wptt.conf

for NAME in ${domain_them[@]}; do
if [[ -f /usr/local/lsws/$NAME/html/giatuan-wptangtoc.sql ]];then
echo "Chuyển website $NAME"
. /etc/wptt/vhost/.$NAME.conf
mysql -u "$database_admin_username" -p"$database_admin_password" -e "DROP DATABASE IF EXISTS ${DB_Name_web}"
mysql -u "$database_admin_username" -p"$database_admin_password" -e "CREATE DATABASE IF NOT EXISTS ${DB_Name_web}"
mysql -u "$database_admin_username" -p"$database_admin_password" -e "DROP USER IF EXISTS '${DB_User_web}'@'localhost'"
mysql -u "$database_admin_username" -p"$database_admin_password" -e "CREATE USER IF NOT EXISTS '${DB_User_web}'@'localhost' IDENTIFIED BY '${DB_Password_web}'"
mysql -u "$database_admin_username" -p"$database_admin_password" -e "GRANT ALL PRIVILEGES ON ${DB_Name_web}.* TO '${DB_User_web}'@'localhost' WITH GRANT OPTION"
mysql -u "$database_admin_username" -p"$database_admin_password" -e "FLUSH PRIVILEGES"

mysql -u "$DB_User_web" -p"$DB_Password_web" "$DB_Name_web" < /usr/local/lsws/$NAME/html/giatuan-wptangtoc.sql
rm -f /usr/local/lsws/$NAME/html/giatuan-wptangtoc.sql
. /etc/wptt/db/wptt-ket-noi $NAME >/dev/null 2>&1
. /etc/wptt/wptt-phan-quyen2 $NAME
fi
done

/usr/local/lsws/bin/lswsctrl restart >/dev/null 2>&1

echo "Hoan tat chuyen toan bo website"
ip=$(curl -s myip.directadmin.com)
if [[ "$ip" = "" ]]; then
  ip=$(curl -s ifconfig.me)
fi
echo "Hay tro ip cac website ve IP: $ip va tien hanh cai dat ssl de su dung"

